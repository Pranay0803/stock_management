<%- include("partials/header") %>
<div class="container">
    <h2 style="text-align:center">Add a Record</h1>
    <div class="row">
        <div style="width: 60%; margin: 20px auto">
            <form action="/stocks/newrecords" method="POST">
                <div class="form-row"> 
                    <!-- <label for="Fname">Dealer name</label>
                    <input type="text" class="form-control" id="Fname" name="dealer" required> -->
                   
                        <label for="Dealer">Dealer Name</label>
                        <select id="Dealer" name="dealer" class="form-control">
                            <option selected>Choose Dealer</option>
                            <% dealers.forEach((dealer) => {   %>
                                <option value="<%=dealer.fname%> <%=dealer.lname%>"><%=dealer.fname%> <%=dealer.lname%></option>
                            <%  }) %>
                        </select>
                </div>
                <div class="form-row">
                      <!-- <label for="Companyname">Category</label>
                      <input type="text" class="form-control" id="Companyname" name="category" required> -->
                      <label for="Category">Category</label>
                      <select id="Category" name="category" class="form-control">
                          <option selected>Choose a Category</option>
                          <% categories.forEach((category) => {   %>
                              <option value="<%=category.name%>"><%=category.name%></option>
                          <%  }) %>
                      </select>
                </div>
                <div class="form-row">
                    <label for="Quantity">Quantity</label>
                    <input type="Number" class="form-control" id="quantity" name="quantity" min="100" required>
                </div>
              <div class="form-row">
                <label for="Amount">Amount</label>
                <input type="Number" class="form-control" id="Amount" name="amount" min="1000" step="100" required>
            </div>
            <div class="form-row">
                <label for="TransactionDate">Transaction Date</label>
                <input type="Date" class="form-control" id="TransactionDate" name="date" required>
          </div>
                <button class="btn btn-primary" type="submit">Submit form</button>
              </form>
        </div>        
    </div>
</div>

<%- include("partials/footer") %>





