<div class="container">
    <h2 style="text-align:center">Add a Supplier</h1>
    <div class="row">
        <div style="width: 60%; margin: 20px auto">
            <form class="needs-validation" action="/supplier/new" method="POST" novalidate>
                <div class="form-row">
                  <div class="col-md-6 mb-3">
                    <label for="Fname">First name</label>
                    <input type="text" class="form-control" id="Fname" name="fname" required>
                    <div class="invalid-tooltip">
                      Please add a valid name.
                    </div>
                    <div class="valid-tooltip">
                      Looks good..
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="Lname">Last name</label>
                    <input type="text" class="form-control" id="Lname" name="lname" required>
                    <div class="invalid-tooltip">
                      Please add a valid last name.
                    </div>
                    <div class="valid-tooltip">
                      Looks good..
                    </div>
                  </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                      <label for="Companyname">Company name</label>
                      <input type="text" class="form-control" id="Companyname" name="companyname" required>
                      <div class="invalid-tooltip">
                        Please add a valid name.
                      </div>
                      <div class="valid-tooltip">
                        Looks good..
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="Category">Category</label>
                      <input type="text" class="form-control" id="Category" name="category" required>
                      <div class="invalid-tooltip">
                        Please add a valid category.
                      </div>
                      <div class="valid-tooltip">
                        Looks good..
                      </div>
                    </div>
              </div>
              <div class="form-row mb-2">
                <label for="Website">Website</label>
                <input type="url" class="form-control" id="Website" name="website" required>
                <div class="invalid-tooltip">
                  Please provide a valid url.
                </div>
                <div class="valid-tooltip">
                  Looks good..
                </div>
              </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                      <label for="Email">Email</label>
                      <input type="email" class="form-control" id="Email" name="email" required>
                      <div class="invalid-tooltip">
                        Please provide a valid email.
                      </div>
                      <div class="valid-tooltip">
                        Looks good..
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="Contactno">Contact</label>
                        <input type="tel" class="form-control" id="Contactno" name="contact" required>
                        <div class="invalid-tooltip">
                          Please provide a valid number.
                        </div>
                        <div class="valid-tooltip">
                          Looks good..
                        </div>
                      </div>
                </div>
                <div class="form-row mb-2">
                  <label for="Address">Address</label>
                  <input type="text" class="form-control" id="Address" name="address" required>
                  <div class="invalid-tooltip">
                    Please provide a proper address.
                  </div>
                  <div class="valid-tooltip">
                    Looks good..
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-md-6 mb-3">
                    <label for="City">City</label>
                    <input type="text" class="form-control" id="City" name="city" required>
                    <div class="invalid-tooltip">
                      Please provide a valid city.
                    </div>
                    <div class="valid-tooltip">
                      Looks good..
                    </div>
                  </div>
                  <div class="col-md-3 mb-3">
                    <label for="State">State</label>
                    <input type="text" class="form-control" id="State" name="state" required>
                    <!-- <select class="custom-select" id="State" required>
                      <option selected disabled value="">Choose...</option>
                      <option>...</option>
                    </select>  -->
                    <div class="invalid-tooltip">
                      Please select a valid state.
                    </div>
                    <div class="valid-tooltip">
                      Looks good..
                    </div>
                  </div>
                  <div class="col-md-3 mb-3">
                    <label for="Zipcode">Zip</label>
                    <input type="text" class="form-control" id="Zipcode" name="zip" required>
                    <div class="invalid-tooltip">
                      Please provide a valid zip.
                    </div>
                    <div class="valid-tooltip">
                      Looks good..
                    </div>
                  </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit form</button>
              </form>
        </div>        
    </div>
</div>






